menu separator # insert an empty line
label check
  menu label ^Install Security Onion 2.3.30 - No automation
  kernel vmlinuz
  append initrd=initrd.img inst.stage2=hd:LABEL=CentOS\x207\x20x86_64 ks=file:///ks.cfg quiet

menu separator # insert an empty line

